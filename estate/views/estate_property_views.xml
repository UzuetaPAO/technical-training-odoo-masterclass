<?xml version="1.0"?>
<odoo>
    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"></field>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="postcode"></field>
                            <field name="date_availability"></field>
                        </group>
                        <group>
                            <field name="expected_price"></field>
                            <field name="selling_price"></field>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"></field>
                                <field name="bedrooms"></field>
                                <field name="living_area"></field>
                                <field name="facades"></field>
                                <field name="garage"></field>
                                <field name="garden"></field>
                                <field name="garden_area"></field>
                                <field name="garden_orientation"></field>
                                <field name="active"></field>
                                <field name="state"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate Property">
                <field string="Title" name="name"></field>
                <field name="postcode"></field>
                <field name="bedrooms"></field>
                <field string="Living Area (sqm)" name="living_area"></field>
                <field name="expected_price"></field>
                <field name="selling_price"></field>
                <field string="Available From" name="date_availability"></field>
            </tree>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Estate properties
            </p>
        </field>
    </record>
</odoo>